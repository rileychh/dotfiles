{
  "env": {
    "CLAUDE_CODE_STREAMING_TEXT": "true"
  },
  "permissions": {
    "allow": [
      "Bash(* --help *)",
      "Bash(* --version)",
      "Bash(cat *)",
      "Bash(code *)",
      "Bash(dart analyze *)",
      "Bash(dart format *)",
      "Bash(dart run build_runner build *)",
      "Bash(du *)",
      "Bash(echo *)",
      "Bash(pbcopy)",
      "Bash(eza *)",
      "Bash(flutter analyze *)",
      "Bash(flutter pub *)",
      "Bash(flutter test *)",
      "Bash(gh api -H *Accept*raw* repos/*/contents/*)",
      "Bash(gh api repos/*/discussions/*)",
      "Bash(gh api repos/*/pulls/*/comments)",
      "Bash(gh issue view *)",
      "Bash(gh pr checks *)",
      "Bash(gh pr diff *)",
      "Bash(gh pr list *)",
      "Bash(gh pr view *)",
      "Bash(gh pr-review review view *)",
      "Bash(gh pr-review threads list *)",
      "Bash(gh repo view *)",
      "Bash(gh run *)",
      "Bash(git -C * branch *)",
      "Bash(git -C * diff *)",
      "Bash(git -C * fetch *)",
      "Bash(git -C * log *)",
      "Bash(git -C * ls-files *)",
      "Bash(git -C * ls-tree *)",
      "Bash(git -C * merge-base *)",
      "Bash(git -C * rev-parse *)",
      "Bash(git -C * show *)",
      "Bash(git -C * stash *)",
      "Bash(git -C * status *)",
      "Bash(git branch *)",
      "Bash(git diff *)",
      "Bash(git fetch *)",
      "Bash(git log *)",
      "Bash(git ls-files *)",
      "Bash(git ls-tree *)",
      "Bash(git merge-base *)",
      "Bash(git rev-parse *)",
      "Bash(git show *)",
      "Bash(git stash *)",
      "Bash(git status *)",
      "Bash(grep *)",
      "Bash(jadx *)",
      "Bash(jq *)",
      "Bash(ls *)",
      "Bash(mise ls)",
      "Bash(pnpm add *)",
      "Bash(pnpm list *)",
      "Bash(pwd)",
      "Bash(ruby -c *)",
      "Bash(sed *)",
      "Bash(sort *)",
      "Bash(test *)",
      "Bash(trash *)",
      "Bash(unzip *)",
      "Bash(which *)",
      "Bash(xxd *)",
      "WebFetch",
      "WebSearch",
      "mcp__ide__getDiagnostics",
      "mcp__plugin_context7_context7__query-docs",
      "mcp__plugin_context7_context7__resolve-library-id",
      "mcp__fetch__fetch",
      "mcp__proxyman__get_flows",
      "mcp__proxyman__get_flow_detail",
      "mcp__proxyman__filter_flows",
      "mcp__proxyman__get_ssl_proxying_list",
      "mcp__proxyman__get_proxy_status",
      "mcp__proxyman__toggle_recording"
    ],
    "defaultMode": "default"
  },
  "statusLine": {
    "type": "command",
    "command": "input=$(cat); model=$(echo \"$input\" | jq -r '.model.display_name'); usage=$(echo \"$input\" | jq '.context_window.current_usage'); total_in=$(echo \"$input\" | jq -r '.context_window.total_input_tokens'); total_out=$(echo \"$input\" | jq -r '.context_window.total_output_tokens'); if [ \"$usage\" != \"null\" ]; then current=$(echo \"$usage\" | jq '.input_tokens + .cache_creation_input_tokens + .cache_read_input_tokens'); size=$(echo \"$input\" | jq '.context_window.context_window_size'); pct=$((current * 100 / size)); in_k=$(awk \"BEGIN {printf \\\"%.1f\\\", $total_in / 1000}\"); out_k=$(awk \"BEGIN {printf \\\"%.1f\\\", $total_out / 1000}\"); printf '%s · ⛁ %d%% · ↑ %sk · ↓ %sk' \"$model\" \"$pct\" \"$in_k\" \"$out_k\"; else printf '%s' \"$model\"; fi"
  },
  "enabledPlugins": {
    "context7@claude-plugins-official": true,
    "figma@claude-plugins-official": true,
    "document-skills@anthropic-agent-skills": true
  },
  "alwaysThinkingEnabled": true,
  "skipDangerousModePermissionPrompt": true,
  "effortLevel": "medium"
}
